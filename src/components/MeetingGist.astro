---
import { ExternalLink } from "lucide-astro";

interface Props {
  id: string;
  category: string;
  no: string;
  title: string[];
}

const { id, category, no, title } = Astro.props;
---

<article class="flex flex-col gap-5 rounded-5 border border-blue p-10">
  {
    title.length > 0 ? (
      <>
        <h3 class="text-header text-xl/1.5">
          {id}
          {category !== "หน้าหลัก" && (
            <>
              — <span>{no}</span>
            </>
          )}
        </h3>
        <hr class="border-t-blue border-dashed" />
        <p
          class:list={[
            "whitespace-pre-line text-sm/1.6 tracking-[0.1px]",
            { "preview-text mb-5": title.length > 2 },
          ]}
        >
          <Fragment set:html={title.slice(0, 6).join("\n")} />
        </p>
        <a
          class="absolute btn btn-primary btn-outline btn-sm text-sm/1 inline-flex items-center gap-5 bg-gray bottom-10 left-1/2 -translate-x-1/2"
          href={`/26/${id}`}
        >
          อ่านรายงานเต็ม
          <ExternalLink size={16} />
        </a>
      </>
    ) : (
      <header class="flex items-center gap-10">
        <h3 class="flex-1 text-header text-xl/1.5">
          {id}
          {category !== "หน้าหลัก" && (
            <>
              — <span>{no}</span>
            </>
          )}
        </h3>
        <a
          class="btn btn-primary btn-outline btn-sm text-sm/1 inline-flex items-center gap-5"
          href={`/26/${id}`}
        >
          อ่านรายงานเต็ม
          <ExternalLink size={16} />
        </a>
      </header>
    )
  }
</article>

<style>
  .preview-text::after {
    content: "";
    height: calc(14px * 1.6 * 2); /* 2 lines */
    @apply absolute inset-x-0 bottom-0 bg-gradient-to-t from-gray to-gray/0;
  }
</style>
